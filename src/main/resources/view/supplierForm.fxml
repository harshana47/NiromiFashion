<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="652.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.SupplierFormController">
   <ImageView fitHeight="652.0" fitWidth="1025.0" layoutY="-2.0" opacity="0.85">
      <image>
         <Image url="@../icon/white-abstract-wallpaper_23-2148830026.jpg" />
      </image>
   </ImageView>

    <!-- Add Button -->
    <Button fx:id="btnAdd" blendMode="MULTIPLY" layoutX="572.0" layoutY="593.0" onAction="#btnAddOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #32DC84;" text="Save">
      <effect>
         <DropShadow />
      </effect></Button>

    <!-- Delete Button -->
    <Button fx:id="btnDelete" blendMode="MULTIPLY" layoutX="685.0" layoutY="593.0" onAction="#btnDeleteOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #008080;" text="Delete">
      <effect>
         <DropShadow />
      </effect></Button>

    <!-- Update Button -->
    <Button fx:id="btnUpdate" blendMode="MULTIPLY" layoutX="798.0" layoutY="593.0" onAction="#btnUpdateOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #008080;" text="Update">
      <effect>
         <DropShadow />
      </effect></Button>

    <!-- Search Button -->
    <Button fx:id="btnSearch" blendMode="MULTIPLY" layoutX="903.0" layoutY="593.0" onAction="#btnSearchOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #008080;" text="Search">
      <effect>
         <DropShadow />
      </effect></Button>

    <!-- TableView -->
    <TableView fx:id="tblSuppliers" layoutX="39.0" layoutY="73.0" prefHeight="352.0" prefWidth="938.0">
        <columns>
            <TableColumn fx:id="colSupplierId" prefWidth="103.0" text="Supplier Id" />
            <TableColumn fx:id="colName" prefWidth="170.0" text="Name" />
            <TableColumn fx:id="colAddress" prefWidth="203.0" text="Address" />
            <TableColumn fx:id="colContact" prefWidth="232.0" text="Contact" />
            <TableColumn fx:id="colEmail" prefWidth="229.0" text="Email" />
        </columns>
    </TableView>

    <!-- TextFields -->
    <TextField fx:id="txtSupplierId" blendMode="MULTIPLY" layoutX="102.0" layoutY="459.0" onKeyReleased="#txtSupplierIdOnKeyReleased" prefHeight="39.0" prefWidth="191.0" promptText="Supplier Id">
      <effect>
         <Blend />
      </effect></TextField>
    <TextField fx:id="txtName" blendMode="MULTIPLY" layoutX="102.0" layoutY="527.0" onKeyReleased="#txtNameOnKeyReleased" prefHeight="39.0" prefWidth="191.0" promptText="Name">
      <effect>
         <Blend />
      </effect></TextField>
    <TextField fx:id="txtAddress" blendMode="MULTIPLY" layoutX="405.0" layoutY="459.0" onKeyReleased="#txtAddressOnKeyReleased" prefHeight="39.0" prefWidth="191.0" promptText="Address">
      <effect>
         <Blend />
      </effect></TextField>
    <TextField fx:id="txtContact" blendMode="MULTIPLY" layoutX="405.0" layoutY="527.0" onKeyReleased="#txtContactOnKeyReleased" prefHeight="39.0" prefWidth="191.0" promptText="Contact">
      <effect>
         <Blend />
      </effect></TextField>
    <TextField fx:id="txtEmail" blendMode="MULTIPLY" layoutX="701.0" layoutY="459.0" onKeyReleased="#txtEmailOnKeyReleased" prefHeight="39.0" prefWidth="191.0" promptText="Email">
      <effect>
         <Blend />
      </effect></TextField>
   <Button fx:id="btnBack" layoutX="39.0" layoutY="593.0" onAction="#btnBackOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #e74c3c;" text="Back" />

</AnchorPane>
