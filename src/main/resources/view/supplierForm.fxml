<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1024.0" prefWidth="652.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.SupplierFormController">

    <!-- Add Button -->
    <Button fx:id="btnAdd" layoutX="268.0" layoutY="356.0" onAction="#btnAddOnAction" text="Save" />

    <!-- Delete Button -->
    <Button fx:id="btnDelete" layoutX="328.0" layoutY="356.0" onAction="#btnDeleteOnAction" text="Delete" />

    <!-- Update Button -->
    <Button fx:id="btnUpdate" layoutX="398.0" layoutY="356.0" onAction="#btnUpdateOnAction" text="Update" />

    <!-- Search Button -->
    <Button fx:id="btnSearch" layoutX="466.0" layoutY="356.0" onAction="#btnSearchOnAction" text="Search" />

    <!-- TableView -->
    <TableView fx:id="tblSuppliers" layoutX="17.0" layoutY="73.0" prefHeight="181.0" prefWidth="567.0">
        <columns>
            <TableColumn fx:id="colSupplierId" prefWidth="91.0" text="Supplier Id" />
            <TableColumn fx:id="colName" prefWidth="81.0" text="Name" />
            <TableColumn fx:id="colAddress" prefWidth="88.0" text="Address" />
            <TableColumn fx:id="colContact" prefWidth="109.0" text="Contact" />
            <TableColumn fx:id="colEmail" prefWidth="197.0" text="Email" />
        </columns>
    </TableView>

    <!-- TextFields -->
    <TextField fx:id="txtSupplierId" layoutX="61.0" layoutY="271.0" prefHeight="25.0" prefWidth="115.0" promptText="Supplier Id" />
    <TextField fx:id="txtName" layoutX="143.0" layoutY="314.0" prefHeight="25.0" prefWidth="115.0" promptText="Name" />
    <TextField fx:id="txtAddress" layoutX="231.0" layoutY="271.0" prefHeight="25.0" prefWidth="115.0" promptText="Address" />
    <TextField fx:id="txtContact" layoutX="319.0" layoutY="314.0" prefHeight="25.0" prefWidth="115.0" promptText="Contact" />
    <TextField fx:id="txtEmail" layoutX="403.0" layoutY="271.0" prefHeight="25.0" prefWidth="115.0" promptText="Email" />
   <Button fx:id="btnBack" layoutX="14.0" layoutY="356.0" onAction="#btnBackOnAction" text="Back" />

</AnchorPane>
