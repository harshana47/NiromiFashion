<AnchorPane prefHeight="652.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.OrderFormController">

    <!-- Labels -->
    <Label layoutX="119.0" layoutY="178.0" prefHeight="17.0" prefWidth="64.0" text="Order ID:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <Label layoutX="119.0" layoutY="219.0" text="Product ID:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <Label layoutX="119.0" layoutY="258.0" prefHeight="17.0" prefWidth="64.0" text="Quantity:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <Label layoutX="412.0" layoutY="178.0" text="Customer ID:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>

    <!-- Text Fields -->
    <TextField fx:id="txtOrderId" layoutX="207.0" layoutY="174.0" />
    <TextField fx:id="txtProductId" layoutX="207.0" layoutY="214.0" onAction="#calculatePrice" />
    <TextField fx:id="txtQuantity" layoutX="207.0" layoutY="254.0" onKeyReleased="#txtOderQuantityOnKeyReleased" />

    <!-- Promotion ID and Discount Percentage Text Fields -->
    <TextField fx:id="txtCustomerId" layoutX="530.0" layoutY="174.0" onAction="#calculatePrice" />

    <!-- Buttons -->
    <Button fx:id="btnAdd" layoutX="843.0" layoutY="395.0" onAction="#btnAddOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #2ecc71;" text="Add" textFill="WHITE">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>
    <Button fx:id="btnRemove" layoutX="843.0" layoutY="446.0" onAction="#btnRemoveOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #f1c40f;" text="Remove" textFill="WHITE">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>
    <Button fx:id="btnClear" layoutX="843.0" layoutY="504.0" onAction="#btnClearOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #00bcd4;" text="Clear" textFill="WHITE">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>
    <Button fx:id="btnCheckout" layoutX="843.0" layoutY="561.0" onAction="#btnCheckoutOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #1b3469;" text="Checkout" textFill="WHITE">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>

    <!-- Total Price Label -->
    <Label layoutX="538.0" layoutY="353.0" text="Price:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <Label fx:id="lblPrice" layoutX="593.0" layoutY="349.0" prefHeight="25.0" prefWidth="83.0">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>

    <!-- Current Date Label -->
    <Label layoutX="779.0" layoutY="62.0" prefHeight="32.0" prefWidth="64.0" text="Date:">
      <font>
         <Font name="System Bold" size="15.0" />
      </font></Label>
    <Label fx:id="lblCurrentDate" layoutX="858.0" layoutY="56.0" prefHeight="42.0" prefWidth="129.0">
      <font>
         <Font size="15.0" />
      </font></Label>

    <!-- TableView for displaying orders -->
    <TableView fx:id="tblOrders" layoutX="85.0" layoutY="395.0" prefHeight="198.0" prefWidth="692.0">
        <columns>
            <TableColumn prefWidth="109.33332824707031" text="Order ID" />
            <TableColumn fx:id="colProductId" prefWidth="126.66667175292969" text="Product ID" />
            <TableColumn fx:id="colQuantity" prefWidth="133.0" text="Quantity" />
            <TableColumn fx:id="colDiscount" prefWidth="155.0" text="Discount (%)" />
            <TableColumn fx:id="colPrice" prefWidth="166.0" text="Price" />
        </columns>
    </TableView>
   <Label layoutX="406.0" layoutY="136.0" text="Promotion ID:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
   <TextField fx:id="txtPromoId" layoutX="530.0" layoutY="132.0" onAction="#calculatePrice" />
   <Label layoutX="388.0" layoutY="212.0" prefHeight="31.0" prefWidth="97.0" text="Customer Name:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
   <Label fx:id="lblCustomer" layoutX="530.0" layoutY="214.0" prefHeight="25.0" prefWidth="83.0" />
   <Label layoutX="119.0" layoutY="132.0" prefHeight="25.0" prefWidth="83.0" text="Payement Id">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
   <TextField fx:id="txtPaymentId" layoutX="206.0" layoutY="132.0" />
   <Label layoutX="432.0" layoutY="258.0" text="EXStatus:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
   <Label fx:id="lblExpireDiscountStatus" layoutX="530.0" layoutY="254.0" prefHeight="25.0" prefWidth="83.0" />
   <Button fx:id="btnBack" layoutX="56.0" layoutY="45.0" onAction="#btnBackOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #e74c3c;" text="LogOut" textFill="WHITE">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>
   <Label layoutX="87.0" layoutY="603.0" prefHeight="31.0" prefWidth="64.0" text=" Total :">
      <font>
         <Font name="System Bold" size="17.0" />
      </font></Label>
   <Label fx:id="lblTotal" layoutX="176.0" layoutY="603.0" prefHeight="32.0" prefWidth="97.0">
      <font>
         <Font size="17.0" />
      </font></Label>

</AnchorPane>
