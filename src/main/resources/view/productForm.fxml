<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.ProductFormController">

    <!-- Add Button -->
    <Button fx:id="btnAdd" layoutX="285.0" layoutY="351.0" onAction="#btnAddOnAction" text="Add" />

    <!-- Delete Button -->
    <Button fx:id="btnDelete" layoutX="355.0" layoutY="351.0" onAction="#btnDeleteOnAction" text="Delete" />

    <!-- Search Button -->
    <Button fx:id="btnSearch" layoutX="439.0" layoutY="351.0" onAction="#btnSearchOnAction" text="Search" />

    <!-- Update Button -->
    <Button fx:id="btnUpdate" layoutX="513.0" layoutY="351.0" onAction="#btnUpdateOnAction" text="Update" />

    <!-- TableView -->
    <TableView fx:id="tblProducts" layoutX="184.0" layoutY="41.0" prefHeight="239.0" prefWidth="399.0">
        <columns>
            <TableColumn fx:id="colProductId" text="Product Id" />
            <TableColumn fx:id="colName" text="Name" /> <!-- Added column for name -->
            <TableColumn fx:id="colExpireDate" text="Expire Date" />
            <TableColumn fx:id="colPrice" text="Price" />
            <TableColumn fx:id="colQtyOnHand" text="QtyOnHand" />
            <TableColumn fx:id="colEmployeeId" text="Employee Id" />
        </columns>
    </TableView>

    <!-- TextFields -->
    <TextField fx:id="txtProductId" layoutX="14.0" layoutY="46.0" promptText="Product Id" />
    <TextField fx:id="txtName" layoutX="14.0" layoutY="87.0" promptText="Name" /> <!-- Added text field for name -->
    <TextField fx:id="txtExpireDate" layoutX="14.0" layoutY="128.0" promptText="Expire Date" />
    <TextField fx:id="txtPrice" layoutX="14.0" layoutY="170.0" promptText="Price" />
    <TextField fx:id="txtQuantity" layoutX="14.0" layoutY="212.0" promptText="Quantity" />
    <TextField fx:id="txtEmployeeId" layoutX="14.0" layoutY="254.0" promptText="Employee Id" />

</AnchorPane>
