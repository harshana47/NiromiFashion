    <Button fx:id="btnAdd" layoutX="697.0" layoutY="589.0" onAction="#btnAddOnAction" text="Add" />

    <!-- Delete Button -->
    <Button fx:id="btnDelete" layoutX="767.0" layoutY="589.0" onAction="#btnDeleteOnAction" text="Delete" />

    <!-- Search Button -->
    <Button fx:id="btnSearch" layoutX="851.0" layoutY="589.0" onAction="#btnSearchOnAction" text="Search" />

    <!-- Update Button -->
    <Button fx:id="btnUpdate" layoutX="925.0" layoutY="589.0" onAction="#btnUpdateOnAction" text="Update" />

    <!-- TableView -->
