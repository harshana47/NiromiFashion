            <TableColumn fx:id="colProductId" prefWidth="73.0" text="Product Id" />
            <TableColumn fx:id="colName" prefWidth="62.0" text="Name" /> <!-- Added column for name -->
            <TableColumn fx:id="colExpireDate" prefWidth="85.0" text="Expire Date" />
            <TableColumn fx:id="colPrice" prefWidth="70.0" text="Price" />
            <TableColumn fx:id="colQtyOnHand" prefWidth="91.0" text="QtyOnHand" />
            <TableColumn fx:id="colEmployeeId" minWidth="0.0" prefWidth="111.0" text="Employee Id" />
         <TableColumn fx:id="colPromotionId" prefWidth="96.0" text="Promotion Id" />
         <TableColumn fx:id="colSupplier" prefWidth="128.0" text="Supplier" />
        </columns>
    </TableView>

    <!-- TextFields -->
    <TextField fx:id="txtProductId" layoutX="586.0" layoutY="396.0" prefHeight="25.0" prefWidth="168.0" promptText="Product Id" />
    <TextField fx:id="txtName" layoutX="308.0" layoutY="398.0" prefHeight="25.0" prefWidth="181.0" promptText="Name" /> <!-- Added text field for name -->
    <TextField fx:id="txtExpireDate" layoutX="73.0" layoutY="440.0" prefHeight="25.0" prefWidth="181.0" promptText="Expire Date" />
    <TextField fx:id="txtPrice" layoutX="73.0" layoutY="396.0" prefHeight="25.0" prefWidth="181.0" promptText="Price" />
    <TextField fx:id="txtQuantity" layoutX="308.0" layoutY="442.0" prefHeight="25.0" prefWidth="181.0" promptText="Quantity" />
    <TextField fx:id="txtEmployeeId" layoutX="586.0" layoutY="440.0" prefHeight="25.0" prefWidth="168.0" promptText="Employee Id" />
   <TextField fx:id="txtPromotionId" layoutX="73.0" layoutY="480.0" prefHeight="25.0" prefWidth="181.0" promptText="Promotion Id" />
   <ComboBox fx:id="cmbSupplier" layoutX="308.0" layoutY="482.0" prefHeight="25.0" prefWidth="181.0" />

