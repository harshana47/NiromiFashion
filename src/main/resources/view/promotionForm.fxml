<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.PromotionFormController">

    <!-- TableView for displaying promotions -->
    <TableView fx:id="tblPromotions" layoutX="218.0" layoutY="73.0" prefHeight="254.0" prefWidth="351.0">
        <columns>
            <!-- Promotion Id column -->
            <TableColumn fx:id="colPromotionId" prefWidth="95.0" text="Promotion Id" />
            <!-- Promotion Name column -->
            <TableColumn fx:id="colPromotionName" prefWidth="145.0" text="Promotion Name" />
            <!-- Discount Percentage column -->
            <TableColumn fx:id="colDiscountPercentage" prefWidth="110.0" text="Disc Percentage" />
        </columns>
    </TableView>

    <!-- Text fields for input -->
    <TextField fx:id="txtPromotionId" layoutX="24.0" layoutY="102.0" promptText="Promotion Id" />
    <TextField fx:id="txtPromotionName" layoutX="24.0" layoutY="159.0" promptText="Promotion Name" />
    <TextField fx:id="txtDiscountPercentage" layoutX="24.0" layoutY="215.0" promptText="Discount Percentage" />

    <!-- Buttons for actions -->
    <Button fx:id="btnSave" layoutX="248.0" layoutY="356.0" onAction="#btnSaveOnAction" text="Save" />
    <Button fx:id="btnUpdate" layoutX="338.0" layoutY="356.0" onAction="#btnUpdateOnAction" text="Update" />
    <Button fx:id="btnDelete" layoutX="428.0" layoutY="356.0" onAction="#btnDeleteOnAction" text="Delete" />
    <Button fx:id="btnSearch" layoutX="518.0" layoutY="356.0" onAction="#btnSearchOnAction" text="Search" />
   <Button fx:id="btnBack" layoutX="24.0" layoutY="356.0" onAction="#btnBackOnAction" text="Back" />

</AnchorPane>
