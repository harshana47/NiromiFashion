<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="1024.0" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.DepartmentFormController">
   <ImageView fitHeight="640.0" fitWidth="1024.0" opacity="0.74">
      <image>
         <Image url="@../icon/paper-style-white-monochrome-background_23-2149001605.jpg" />
      </image>
   </ImageView>

    <!-- Title -->
    <Label layoutX="371.0" layoutY="42.0" style="-fx-font-size: 24px; -fx-text-fill: #333333;" text="Department Management">
        <font>
            <Font name="Arial" size="12.0" />
        </font>
      <textFill>
         <LinearGradient endX="1.0" endY="0.6255924170616114">
            <stops>
               <Stop>
                  <color>
                     <Color />
                  </color>
               </Stop>
               <Stop offset="1.0">
                  <color>
                     <Color red="0.9210526347160339" green="0.025584794580936432" blue="0.29422515630722046" />
                  </color>
               </Stop>
            </stops>
         </LinearGradient>
      </textFill>
    </Label>

    <!-- Table View -->
    <TableView fx:id="tblDepartments" layoutX="68.0" layoutY="110.0" prefHeight="259.0" prefWidth="849.0" style="-fx-background-color: #ffffff;">
        <columns>
            <TableColumn fx:id="colDepartmentId" prefWidth="256.3333282470703" text="Department ID" />
            <TableColumn fx:id="colName" prefWidth="285.6666717529297" text="Name" />
            <TableColumn fx:id="colStaffCount" prefWidth="275.6666564941406" text="Staff Count" />
        </columns>
    </TableView>

    <!-- Input Fields -->
    <Label layoutX="105.0" layoutY="428.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Department ID" textFill="WHITE">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <TextField fx:id="txtDeptId" blendMode="MULTIPLY" layoutX="236.0" layoutY="420.0" onKeyReleased="#txtDepartmentIDOnKeyReleased" prefHeight="35.0" prefWidth="212.0">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
      <effect>
         <Blend />
      </effect></TextField>

    <Label layoutX="160.0" layoutY="485.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Name" textFill="WHITE">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <TextField fx:id="txtName" blendMode="MULTIPLY" layoutX="236.0" layoutY="477.0" onKeyReleased="#txtDepartmentNameOnKeyReleased" prefHeight="35.0" prefWidth="212.0">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
      <effect>
         <Blend />
      </effect></TextField>

    <Label layoutX="573.0" layoutY="428.0" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Staff Count" />
    <TextField fx:id="txtStaffCount" blendMode="MULTIPLY" layoutX="665.0" layoutY="420.0" onKeyReleased="#txtDepartmentStaffOnKeyReleased" prefHeight="35.0" prefWidth="212.0">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
      <effect>
         <Blend />
      </effect></TextField>

    <!-- Buttons -->
    <Button fx:id="btnAdd" layoutX="536.0" layoutY="532.0" onAction="#btnAddOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Add" />
    <Button fx:id="btnDelete" layoutX="639.0" layoutY="532.0" onAction="#btnDeleteOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
    <Button fx:id="btnUpdate" layoutX="739.0" layoutY="532.0" onAction="#btnUpdateOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Update" />
    <Button fx:id="btnSearch" layoutX="843.0" layoutY="532.0" onAction="#btnSearchOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Search" />
   <JFXButton fx:id="btnBack" buttonType="RAISED" layoutX="68.0" layoutY="548.0" onAction="#btnBackOnAction" prefHeight="32.0" prefWidth="74.0" style="-fx-background-color: #fab1a0;" text="Back" textFill="WHITE">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="System Bold" size="13.0" />
      </font>
   </JFXButton>
</AnchorPane>
